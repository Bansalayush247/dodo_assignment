FROM debian:bookworm-slim
RUN apt-get update && apt-get install -y ca-certificates libpq5 postgresql-client && rm -rf /var/lib/apt/lists/*
WORKDIR /app

# Copy the locally-built release binary into the image
COPY target/release/transaction-service /app/transaction-service
COPY migrations /app/migrations
COPY entrypoint.sh /app/entrypoint.sh
RUN chmod +x /app/entrypoint.sh

ENV RUST_LOG=info
EXPOSE 3000
CMD ["/app/entrypoint.sh"]
